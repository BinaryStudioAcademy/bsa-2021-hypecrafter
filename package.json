{
    "scripts": {
        "lint:gateway": "cd gateway && npm run lint:write",
        "lint:backend": "cd backend && npm run lint:write",
        "lint:frontend": "cd frontend && npm run lint:write",
        "lint:payment": "cd payment && npm run lint:write",
        "lint": "npm run lint:gateway && npm run lint:backend && npm run lint:frontend && npm run lint:payment",
        "install:gateway": "cd gateway && npm install",
        "install:backend": "cd backend && npm install",
        "install:frontend": "cd frontend && npm install",
        "install:payment": "cd payment && npm install",
        "install:all": "npm install && npm run build:shared && npm run install:gateway && npm run install:backend && npm run install:frontend, && npm run install:payment",
        "build:shared": "cd shared && npm install && npm run build",
        "start:gateway": "cd gateway && npm run start",
        "start:backend": "cd backend && npm run start",
        "start:frontend": "cd frontend && npm run start",
        "start:payment": "cd payment && npm run start",
        "start": "concurrently -k -p \"{name}: {time}\" -n \"FRONTEND,GATEWAY,BACKEND,PAYMENT\" \"npm:start:frontend\" \"npm:start:gateway\" \"npm:start:backend\" \"npm:start:payment\""
    },
    "devDependencies": {
        "concurrently": "^6.2.0",
        "husky": "^4.3.8",
        "lint-staged": "^11.1.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.(js|ts|tsx)": [
            "npm run lint"
        ]
    },
  "dependencies": {
    "pg": "^8.7.1",
    "tslib": "^1.14.1"
  }
}
