{
  "scripts": {
    "lint:gateway": "cd gateway && npm run lint:write",
    "lint:backend": "cd backend && npm run lint:write",
    "lint:frontend": "cd frontend && npm run lint:write",
    "lint": "npm run lint:gateway && npm run lint:backend && npm run lint:frontend",
    "install:gateway": "cd gateway && npm install",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm install && npm run build:shared && npm run install:gateway && npm run install:backend && npm run install:frontend",
    "build:shared": "cd shared && npm install && npm run build",
    "start:gateway": "cd gateway && npm run start",
    "start:backend": "cd backend && npm run start",
    "start:frontend": "cd frontend && npm run start",
    "start-prod:backend": "cd backend && npm run start-prod",
    "start-prod:gateway": "cd gateway && npm run start-prod",
    "migrate:backend": "cd backend && npm run migrate",
    "migrate:gateway": "cd gateway && npm run migrate",
    "migrate:all": "npm run migrate:backend && npm run migrate:gateway",
    "seed:backend": "cd backend && npm run seed",
    "seed:gateway": "cd gateway && npm run seed",
    "seed:all": "npm run seed:backend && npm run seed:gateway",
    "start": "concurrently -k -p \"{name}: {time}\" -n \"FRONTEND,GATEWAY,BACKEND\" \"npm:start:frontend\" \"npm:start:gateway\" \"npm:start:backend\""
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.(js|ts|tsx)": [
      "npm run lint"
    ]
  },
  "dependencies": {
    "tslib": "^1.14.1"
  }
}
